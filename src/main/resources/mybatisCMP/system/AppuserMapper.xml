<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AppuserMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_APP_USER
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		USER_ID,
		USERNAME,
		PASSWORD,
		NAME,
		LAST_LOGIN,
		IP,
		STATUS,
		BZ,
		PHONE,
		SFID,
		START_TIME,
		END_TIME,
		YEARS,
		EMAIL,
		USER_NO,
		PUBLIC_KEY,
		IS_VERIFY
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{USER_ID},
		#{USERNAME},
		#{PASSWORD},
		#{NAME},
		#{LAST_LOGIN},
		#{IP},
		#{STATUS},
		#{BZ},
		#{PHONE},
		#{SFID},
		#{START_TIME},
		#{END_TIME},
		#{YEARS},
		#{EMAIL},
		#{USER_NO},
		#{PUBLIC_KEY},
		#{IS_VERIFY}
			
	</sql>
	
	<!-- 新增会员 -->
	<insert id="saveU" parameterType="pd">
		insert into <include refid="tableName"></include> (
			USER_ID,USERNAME,PASSWORD,NAME,STATUS,BZ,
			PHONE,SFID,START_TIME,END_TIME,YEARS,EMAIL,USER_NO,PUBLIC_KEY,IS_VERIFY
		) values (
			#{USER_ID},#{USERNAME},#{PASSWORD},#{NAME},#{STATUS},#{BZ},
			#{PHONE},#{SFID},#{START_TIME},#{END_TIME},#{YEARS},#{EMAIL},#{USER_NO},#{PUBLIC_KEY},#{IS_VERIFY}
		)
	</insert>
	
	<!-- 用户列表(app用户组) -->
	<select id="userlistPage" parameterType="page" resultType="pd">
		select 
			<include refid="Field"></include>
		from <include refid="tableName"></include> 
		where 1=1 
		<if test="pd.keywords != null and pd.keywords != ''"><!-- 用户名检索 -->
			and(
					USERNAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
					EMAIL LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				or
					USER_NO LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
		<if test="pd.lastLoginStart!=null and pd.lastLoginStart!=''"><!-- 到期时间检索 -->
			and END_TIME &gt;= #{pd.lastLoginStart} 
		</if>
		<if test="pd.lastLoginEnd!=null and pd.lastLoginEnd!=''"><!-- 到期时间检索 -->
			and END_TIME &lt;= #{pd.lastLoginEnd} 
		</if>
		<if test="pd.STATUS != null and pd.STATUS != ''"><!-- 状态检索 -->
			and STATUS=#{pd.STATUS} 
		</if>
		order by NAME
	</select>
	
	<!-- 通过USERNAME获取数据 -->
	<select id="findByUsername" parameterType="pd" resultType="pd">
		select 
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where 
			USERNAME = #{USERNAME}
	</select>
	
	<!-- 通过邮箱获取数据 -->
	<select id="findByEmail" parameterType="pd" resultType="pd">
		select 
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where 
			EMAIL = #{EMAIL}
		<if test="USERNAME != null and USERNAME != ''">
			and USERNAME != #{USERNAME} 
		</if>
	</select>
	
	<!-- 通过编号获取数据 -->
	<select id="findByNumber" parameterType="pd" resultType="pd">
		select 
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where 
			USER_NO = #{USER_NO}
		<if test="USERNAME != null and USERNAME != ''">
			and USERNAME != #{USERNAME} 
		</if>
	</select>
	
	<!-- 删除用户 -->
	<delete id="deleteU" parameterType="pd">
		delete from <include refid="tableName"></include> 
		where 
			USER_ID = #{USER_ID}
	</delete>

	<!-- 修改 -->
	<update id="editU" parameterType="pd">
		update  <include refid="tableName"></include>
			set USERNAME			= #{USERNAME},
				NAME 				= #{NAME},
				BZ					= #{BZ},
				PHONE 				= #{PHONE},
				SFID 				= #{SFID},
				START_TIME 			= #{START_TIME},
				END_TIME 			= #{END_TIME},
				YEARS 				= #{YEARS},
				STATUS 				= #{STATUS},
				EMAIL				= #{EMAIL},
				USER_NO				= #{USER_NO},
				PUBLIC_KEY			= #{PUBLIC_KEY},
				IS_VERIFY			= #{IS_VERIFY}
			<if test="PASSWORD != null and PASSWORD != ''">
				,PASSWORD				= #{PASSWORD}
			</if>
			where 
				USER_ID = #{USER_ID}
	</update>
	
	<!-- 修改 -->
	<update id="editIpAndTime" parameterType="pd">
		update  <include refid="tableName"></include>
			set IP					= #{IP},
				LAST_LOGIN			= #{LAST_LOGIN}
			where 
				USER_ID = #{USER_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findByUiId" parameterType="pd" resultType="pd">
		select 
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where 
			USER_ID = #{USER_ID}
	</select>

	<!-- 全部会员 -->
	<select id="listAllUser" parameterType="pd" resultType="pd">
		select 
			<include refid="Field"></include>
		from <include refid="tableName"></include> u
		where 1=1 
		<if test="keywords != null and keywords != ''"><!-- 用户名检索 -->
			and(
				USERNAME LIKE CONCAT(CONCAT('%', #{keywords}),'%')
				or
				EMAIL LIKE CONCAT(CONCAT('%', #{keywords}),'%')
				or
				USER_NO LIKE CONCAT(CONCAT('%', #{keywords}),'%')
				)
		</if>
		<if test="ROLE_ID != null and ROLE_ID != ''"><!-- 角色检索 -->
			and ROLE_ID=#{ROLE_ID} 
		</if>
		<if test="lastLoginStart!=null and lastLoginStart!=''"><!-- 到期时间检索 -->
			and END_TIME &gt;= #{lastLoginStart} 
		</if>
		<if test="lastLoginEnd!=null and lastLoginEnd!=''"><!-- 到期时间检索 -->
			and END_TIME &lt;= #{lastLoginEnd} 
		</if>
		<if test="STATUS != null and STATUS != ''"><!-- 状态检索 -->
			and STATUS=#{STATUS} 
		</if>
		order by NAME
	</select>

	<!-- 批量删除用户 -->
	<delete id="deleteAllU" parameterType="String">
		delete from <include refid="tableName"></include>
		where 
			USER_ID in
  			 <foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                  #{item}
             </foreach>
	</delete>
	
	<!-- 获取总数 -->
	<select id="getAppUserCount" parameterType="String" resultType="pd">
		select 
			count(USER_ID) appUserCount
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 获取总数 -->
	<select id="findByVerifyKey" resultType="pd">
		select 
			*
		from 
		<include refid="tableName"></include>
		where  is_verify  = 1
	</select>
	<!-- 获取总数 -->
	<select id="findByVerifyKeySearch" parameterType="pd" resultType="pd">
		select 
			*
		from 
		<include refid="tableName"></include>
		where  is_verify  = 1 
		<if test="keywords != null and keywords != ''"><!-- 用户名检索 -->
		and USERNAME LIKE CONCAT(CONCAT('%', #{keywords}),'%')
		</if>
	</select>
	<!-- 获取分组groupID、groupName -->
	<select id="findForPay" resultType="pd">
		select c.username as group_id, c.name as group_name from sys_app_user c where c.is_verify = 1 group by c.username, c. name 
	</select>
	
</mapper>